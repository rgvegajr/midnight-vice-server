        <header class="jumbotron">
            <div class="container">
                <!-- <h1>Welcome to YelpCamp!</h1>
                <p>View our handpicked campgrounds from all over the world!</p> -->
                <h1>Welcome to Midnight Food Vice!!</h1>
                <p>View our handpicked food trucks from all over Miami!</p>
                <p>
                    <a class="btn btn-primary btn-lg"  href="/trucks/new">Add a new truck</a>
                </p>
            </div>
        </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% trucks.forEach(function(sites){  %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= sites.image%>">
                    <div class="caption">
                        <h4><%= sites.name %></h4>
                    </div>
                    <div>
                        <a class="btn btn-primary btn-sm"  href="/trucks/<%= sites._id %>">More Info</a>
                    </div>                    
                </div>
            </div>
        <% }); %>
    </div>
