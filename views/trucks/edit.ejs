<% include ../partials/header %>
<!--<div class="container">-->
    <div class="row">
        <h1 style="text-align: center;">Edit <%= truck.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
  
            <form action="/trucks/<%= truck._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="truck[name]" value="<%= truck.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="truck[image]" value="<%= truck.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="truck[description]" value="<%= truck.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="truck[owner]" value="<%= truck.owner %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= truck.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/trucks">Go back</a>
        </div>
    </div>
<!--</div>-->
<% include ../partials/footer %>